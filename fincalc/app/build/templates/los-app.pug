mixin info-section
    .info
        div(style="margin-right: 1.6rem;")
            img.info-avatar(src="/static/img/avatar.svg")
        div
            .info-name Marc Celestin
            .info-name-meta NMLS ID #12423
            .info-buttons(style="margin-top: 4px;")
                button.info-button: span: +icon-phone
                button.info-button: span: +icon-mail
                button.info-button: span: +icon-message

doctype html
html
    head
        meta(charsert="utf-8")
        meta(name="viewport", content="width=device-width")
        title FinCalc
        link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Lato:300,400,700")
        link(rel="stylesheet", href="/static/css/los/los.css?version=6")
    body
        div#container.flex-column
            nav.toolbar.flex-row.flex-center-cross
                //- #FIXME: I don't want the title displaced when this back button shows up :P
                //- float: left does not work :(
                //- ^ I think the top is fixed with position: absolute, but not the issue is
                //-   What if the title is too long?
                button.icon-button#back-button(style="padding-left: 0.8rem; padding-right: 1.6rem; display: none; width: auto; position: absolute;"): +icon-chevron-right
                div.flex-1.flex-row.flex-center-cross.flex-center
                    img.branding-toolbar-logo(src="/static/img/placeholder/pct-icon.png")
                    h2(style="margin-left: 8px; font-weight: normal;") FinCalc's Bank
            main.content.flex-1
                section#page-dashboard.page
                    +info-section
                    .list
                        .list-item.list-item-i(data-page-link="calculators")
                            .list-item-icon: +icon-percent
                            .list-item-content
                                .list-item-title Calculators
                                .list-item-meta Auto, Personal, Mortgage, ect...
                        .list-item.list-item-i
                            .list-item-icon: +icon-map
                            .list-item-content
                                .list-item-title Explore
                                .list-item-meta Learn about our different programs.
                        .list-item.list-item-i(data-page-link="connect")
                            .list-item-icon: +icon-message
                            .list-item-content
                                .list-item-title Connect
                                .list-item-meta Contact us and Pre-qualify for a loan today.
                        //- TODO: Find out what this one is supposed to be. I have no clue.
                        //- .list-item.list-item-i
                        //-     .list-item-icon: +icon-map
                        //-     .list-item-content
                        //-         .list-item-title My Loan Application
                        //-         .list-item-meta Fill out our loan application.
                    .content-footer
                        .text-center.text-muted NMLS Consumer Access
                section#page-calculators.page
                    +info-section
                    .list
                        .list-item(data-calc-link="ByTp7msyf")
                            .list-item-title Personal Loan Calculator
                        .list-item(data-calc-link="BJwTeNUyz")
                            .list-item-title Auto Loan Calculator
                        .list-item(data-calc-link="Bko6gVU1z")
                            .list-item-title Mortgage Loan Calculator
                    .content-footer
                        .text-center.text-muted NMLS Consumer Access
                section#page-connect.page
                    +info-section
                    .list
                        .list-item(data-page-link="askQuestion")
                            .list-item-title Ask A Question
                        .list-item(data-page-link="requestCallback")
                            .list-item-title Request A Callback
                        .list-item(data-page-link="startApplication")
                            .list-item-title Start Application
                section#page-ask-a-question.page
                    div(style="margin: 1.6rem;")
                        h2 Ask A Question
                        .form-group
                            label.form-label Question
                            textarea.form-input(style="min-height: 16rem;", placeholder="Question...")
                        .form-group
                            label.form-label Email Address
                            input.form-input(type="email", placeholder="Email")
                        .form-group: button.btn.btn-primary.float-right Ask Question
                section#page-request-callback.page
                    div(style="margin: 1.6rem;")
                        h2 Request A Callback
                        .form-group
                            label.form-label Phone Number
                            input.form-input(type="number", placeholder="Phone Number")
                        .form-group
                            label.form-label Best Time to Contact
                            select.form-select
                                option(disabled) Contact Time
                                option(selected) Morning
                                option Afternoon
                                option Evening
                                option ASAP
                        .form-group
                            label.form-label Comments (optional)
                            textarea.form-input(style="min-height: 16rem;", placeholder="Comments...")
                        .form-group: button.btn.btn-primary.float-right Request Callback
                section#page-calculator-frame.page
                    div(style="height: 100%; display: flex; flex-direction: column; overflow: auto; -webkit-overflow-scrolling:touch;")
                        iframe#calc-frame(style="border: none; flex: 1; overflow: auto;")
            nav.toolbar.bottom-toolbar
                //- #TODO: Look back at this and consider using auto and not hidden.
                .btoolbar-buttons(style="overflow-x: hidden;")
                    .btoolbar-btn(data-page-link="dashboard", data-page-clear="true")
                        .btoolbar-btn-icon: +icon-home
                        .btoolbar-btn-text Dashboard
                    .btoolbar-btn(data-page-link="calculators", data-page-clear="true")
                        .btoolbar-btn-icon: +icon-percent
                        .btoolbar-btn-text Calculators
                    .btoolbar-btn(data-page-link="explore", data-page-clear="true")
                        .btoolbar-btn-icon: +icon-map
                        .btoolbar-btn-text Explore
                    .btoolbar-btn
                        .btoolbar-btn-icon: +icon-info
                        .btoolbar-btn-text About
        script(type="text/javascript", src="/static/js/los.bundle.js")